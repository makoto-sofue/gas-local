{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": ".",
    "lib": ["es2019"],
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": ["./**/*.ts"]
}
